// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_weight": 500.0,
  "completions": {
    "words_min_length": 3
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "fixed",
    "active_line_width": 1,
    "line_width": 1
  },
  "soft_wrap": "none",
  "show_wrap_guides": true,
  "gutter": {
    "min_line_number_digits": 0,
    "folds": true
  },
  "relative_line_numbers": "enabled",
  "outline_panel": {
    
  },
  "restore_on_file_reopen": false,
  "when_closing_with_no_tabs": "platform_default",
  "audio": {
    "experimental.auto_speaker_volume": true
  },
  "terminal": {
    "option_as_meta": false,
    "max_scroll_history_lines": 10000,
    "default_height": 200.0
  },
  "tabs": {
    "git_status": false,
    "file_icons": true
  },
  "tab_bar": {
    "show": true
  },
  "title_bar": {
    "show_branch_name": true,
    "show_onboarding_banner": true,
    "show_menus": false,
    "show_sign_in": false,
    "show_user_picture": false
  },
  "project_panel": {
    "default_width": 200.0
  },
  "disable_ai": true,
  "buffer_font_features": {
    "calt": 0
  },
  "format_on_save": "off",
  "buffer_font_family": "0xProto Nerd Font Propo",
  "ui_font_family": ".SystemUIFont",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  // "base_keymap": "None",
  "minimap": {
    "show": "auto"
  },
  "vim_mode": true,
  "ui_font_size": 18.0,
  "buffer_font_size": 18.0,
  "theme": {
    "mode": "system",
    "light": "Everforest Dark Hard",
    "dark": "Everforest Dark Hard"
  },
  "cursor_blink": false,
  "restore_on_startup": "none",
  "session": {
    "restore_unsaved_buffers": false,
    "restore": false
  },
  "auto_install_extensions": {
    "html": false,
    "python": false,
    "rust": false
  },
  "auto_update": false,
  "lsp": {
    "*": {
      "enabled": false
    },
    "basedpyright": {
      "enabled": false
    }
  },
  "diagnostics": {
    "button": true,
    "include_warnings": false,
    "enabled": false
  },
  "show_diagnostics": "off",
  "show_edit_predictions": false,
  "inlay_hints": {
    "enabled": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Python": {
      "show_edit_predictions": false,
      "enable_language_server": false,
      "format_on_save": "off",
      "diagnostics": {
        "enabled": false
      }
    }
  },
  "git_status": true,

}
