// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette (cmd-shift-p)
[
  // Remove all default bindings by setting base_keymap to "None" in settings.json
  // or selectively override them here

  // === File Operations ===
  {
    "context": "Workspace",
    "bindings": {
      "cmd-t": "workspace::NewFile",
      "cmd-s": "workspace::Save",
      "cmd-shift-s": "workspace::SaveAs",
      "cmd-w": "pane::CloseActiveItem",
      "cmd-shift-w": "workspace::CloseWindow",
      "cmd-q": "zed::Quit"
    }
  },

  // === Editor Operations ===
  {
    "context": "Editor",
    "bindings": {
      "cmd-z": "editor::Undo",
      "cmd-shift-z": "editor::Redo",
      "cmd-x": "editor::Cut",
      "cmd-c": "editor::Copy",
      "cmd-v": "editor::Paste",
      "cmd-a": "editor::SelectAll",
      "cmd-d": "editor::SelectNext",
      "cmd-/": "editor::ToggleComments",
      "cmd-[": "editor::Outdent",
      "cmd-]": "editor::Indent",
      "cmd-shift-k": "editor::DeleteLine"
    }
  },

  // === Navigation & Search ===
  {
    "context": "Workspace",
    "bindings": {
      "cmd-o": "file_finder::Toggle",
      "cmd-p": "projects::OpenRecent",
      "cmd-shift-p": "command_palette::Toggle",
      "cmd-shift-a": "zed::Extensions",
      "cmd-f": "buffer_search::Deploy",
      "cmd-shift-f": "project_search::ToggleFocus",
      "cmd-g": "search::SelectNextMatch",
      "cmd-shift-g": "search::SelectPreviousMatch",
      "cmd-shift-o": "outline::Toggle",
      "alt-d": "workspace::NewTerminal",
      "cmd-l": "go_to_line::Toggle",
      "escape": "workspace::CloseAllDocks",
      "alt-r": "repl::Run",
      "alt-R": "repl::Restart"
    }
  },

  // === View & Layout ===
  {
    "context": "Workspace",
    "bindings": {
      "alt-e": "workspace::ToggleLeftDock",
      "alt-=": "workspace::IncreaseActiveDockSize",
      "alt--": "workspace::DecreaseActiveDockSize"
    }
  },

  // === Project Panel ===
  {
    "context": "ProjectPanel",
    "bindings": {
      "l": "project_panel::OpenPermanent"
    }
  },

  // === Pane Navigation ===
  {
    "context": "Workspace",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-l": "workspace::ActivatePaneRight"
    }
  },

  // === Tab Switching ===
  {
    "context": "Pane",
    "bindings": {
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8]
    }
  },

  // === Markdown ===
  {
    "context": "Workspace",
    "bindings": {
      "alt-p": "markdown::OpenPreview"
    }
  },

  // === TUIs ===
  {
     "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
     "bindings": {
       "space l g": ["task::Spawn",{ "task_name": "LazyGit", "reveal_target": "center" }],
       "space e": ["task::Spawn",{ "task_name": "yazi", "reveal_target": "center"}],
   }
  }
]
