// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "buffer_font_features": {
    "calt": 0
  },
  "format_on_save": "off",
  "buffer_font_family": "0xProto Nerd Font Propo",
  "ui_font_family": ".SystemUIFont",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  // "base_keymap": "None",
  "minimap": {
    "show": "auto"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Everforest Dark Hard",
    "dark": "Everforest Dark Hard"
  },
  "cursor_blink": false,
  "restore_on_startup": "none",
  "session": {
    "restore_unsaved_buffers": false
  },
  "auto_install_extensions": {
    "html": false,
    "python": false,
    "rust": false
  },
  "auto_update": false,
  "lsp": {
    "*": {
      "enabled": false
    },
    "basedpyright": {
      "enabled": false
    }
  },
  "diagnostics": {
    "include_warnings": false,
    "enabled": false
  },
  "show_diagnostics": "off",
  "show_inline_completions": false,
  "inlay_hints": {
    "enabled": false
  },
  "show_whitespaces": "none",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Python": {
      "show_inline_completions": false,
      "enable_language_server": false,
      "format_on_save": "off",
      "diagnostics": {
        "enabled": false
      }
    }
  }
}
