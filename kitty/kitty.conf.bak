#  theme
include current-theme.conf

# font
font_size 18.0
font_family      SF Mono Semibold
bold_font        SF Mono Bold
italic_font      SF Mono Semibold Italic
bold_italic_font SF Mono Bold Italic

# window
hide_window_decorations titlebar-only
window_padding_width 0 0
remember_window_size no
initial_window_width 125c
initial_window_height 35c
background_opacity 1

# tab
tab_bar_edge top
tab_bar_style powerline
tab_title_template "{index} {title}"
tab_powerline_style round
scrollback_pager_history_size 10

# ssh
allow_remote_control yes
listen_on unix:/tmp/kitty
shell_integration enabled


# key mappings
clear_all_shortcuts yes
macos_option_as_alt yes
map cmd+shift+, load_config_file
map cmd+k clear_terminal scroll active
map cmd+t new_tab
map cmd+n new_os_window
map cmd+q quit
map cmd+c copy_and_clear_or_interrupt
map cmd+v paste_from_clipboard
enabled_layouts splits,stack
map cmd+, layout_action bias 25
map cmd+d launch --location=vsplit --cwd=current
map cmd+shift+d launch --location=hsplit --cwd=current
map cmd+w close_window
map alt+f toggle_layout stack
map alt+h neighboring_window left
map alt+l neighboring_window right
map alt+k neighboring_window up
map alt+j neighboring_window down
map alt+minus resize_window narrower
map alt+equal resize_window wider
map alt+shift+equal resize_window taller 1
map alt+shift+minus resize_window shorter 1
map ctrl+left neighboring_window left
map ctrl+right move_window right
map shift+down neighboring_window down
map shift+up move_window up
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9
map cmd+p goto_tab -1
map cmd+equal change_font_size all +1.0
map cmd+minus change_font_size all -1.0
map cmd+0 change_font_size all 0
map cmd+s send_text all \e:w\r

# kitty-scrollback.nvim
action_alias kitty_scrollback_nvim kitten ~/.local/share/nvim/lazy/kitty-scrollback.nvim/python/kitty_scrollback_nvim.py
map cmd+f kitty_scrollback_nvim
map cmd+g kitty_scrollback_nvim --config ksb_builtin_last_cmd_output
